generator client {
  provider = "prisma-client-js"
  output   = "../generated"
}

datasource db {
  provider = "postgresql"
}

model Settings {
  id         Int      @id @default(autoincrement())
  createDate DateTime @default(now())
  updateDate DateTime @updatedAt

  isActive         Boolean
  name             String
  minWorkerThreads Int
  maxWorkerThreads Int

  @@map("settings")
}

model Task {
  id         Int      @id @default(autoincrement())
  createDate DateTime @default(now())
  updateDate DateTime @updatedAt

  type    TaskType
  payload Json?
  status  TaskStatus @default(PENDING) // pending | running | done | failed
  result  Json?
  error   String?

  @@map("task")
}

enum TaskType {
  COLLECT_TRAFFIC_SOURCE_DATA
}

enum TaskStatus {
  PENDING
  RUNNING
  FAILED
  DONE
}
